<% include ../partials/header.ejs %>

<h1 class="text-center">Create a New Campground</h1>

    <form action="/campgrounds" method="POST" class="center-form">
        <div class="form-group">
            <input type="text" class="form-control" name="campground[name]" placeholder="name" required>
        </div>
        <div class="form-group">
            <textarea rows="6" name="campground[description]" class="form-control" placeholder="description" required></textarea>
        </div>
        <div class="form-group">
            <input type="number" class="form-control" name="campground[price]" placeholder="cost" min="0.1" step="0.1" required>
        </div>
        <div class="form-group">
            <input type="text" class="form-control" name="campground[image]" placeholder="image url" required>
        </div>
        <input type="submit" value="Create" class="form-control btn btn-primary">
    </form>

