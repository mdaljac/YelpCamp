<% include ../partials/header.ejs %>

<h1 class="text-center">Edit Campground</h1>

    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" class="center-form">
        <div class="form-group">
            <label>Name:</label>
            <input type="text" class="form-control" name="campground[name]" value="<%= campground.name %>" required>
        </div>
        <div class="form-group">
            <textarea rows="6" name="campground[description]" class="form-control" required><%= campground.description %></textarea>
        </div>
        <div class="form-group">
            <label>Price:</label>
            <input type="number" class="form-control" name="campground[price]" value="<%= campground.price %>" min="0.1" step="0.1" required>
        </div>
        <div class="form-group">
            <label>Image:</label>
            <input type="text" class="form-control" name="campground[image]" value="<%= campground.image %>" required>
        </div>
        <input type="submit" value="Update" class="form-control btn btn-primary">
    </form>

<% include ../partials/footer.html %>